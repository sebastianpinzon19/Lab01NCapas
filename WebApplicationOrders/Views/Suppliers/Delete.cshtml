@model Entities.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}
<h1>Delete Supplier</h1>

<h4>Supplier</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        ID
    </dt>
    <dd class="col-sm-10">
        @Model.Id
    </dd>
    <dt class="col-sm-2">
        Company Name
    </dt>
    <dd class="col-sm-10">
        @Model.CompanyName
    </dd>
    <dt class="col-sm-2">
        Contact Name
    </dt>
    <dd class="col-sm-10">
        @Model.ContactName
    </dd>
    <dt class="col-sm-2">
        Contact Title
    </dt>
    <dd class="col-sm-10">
        @Model.ContactTitle
    </dd>
    <dt class="col-sm-2">
        City
    </dt>
    <dd class="col-sm-10">
        @Model.City
    </dd>
    <dt class="col-sm-2">
        Country
    </dt>
    <dd class="col-sm-10">
        @Model.Country
    </dd>
    <dt class="col-sm-2">
        Phone
    </dt>
    <dd class="col-sm-10">
        @Model.Phone
    </dd>
    <dt class="col-sm-2">
        Fax
    </dt>
    <dd class="col-sm-10">
        @Model.Fax
    </dd>
</dl>
<form asp-controller="Suppliers" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
</form>
