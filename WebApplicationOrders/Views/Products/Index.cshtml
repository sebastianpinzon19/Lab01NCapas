@model List<Entities.Models.Product>

<h1>Product List</h1>
@{
    ViewData["Title"] = "Product";
}
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Supplier ID</th>
            <th>Unit Price</th>
            <th>Package</th>
            <th>Is Discontinued</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.SupplierId</td>
                <td>@item.UnitPrice</td>
                <td>@item.Package</td>
                <td>@item.IsDiscontinued</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
